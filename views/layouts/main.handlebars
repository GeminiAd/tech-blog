<body>
    <header class="d-flex flex-column flex-sm-row justify-content-center justify-content-sm-between align-items-center">
        {{#if dashboard}}
        <h1 class="ms-0 ms-sm-4 ms-lg-5 mt-3 my-sm-0">Dashboard</h1>
        {{else}}
        <h1 class="ms-0 ms-sm-4 ms-lg-5 mt-3 my-sm-0">Tech Blog</h1>
        {{/if}}
        <nav>
            <ul class="p-0 mb-2 mb-sm-0 mt-3 mt-sm-0">
                <li class="p-2 p-sm-3 p-md-4 p-lg-5"><a href="/">Home</a></li>
                <li class="p-2 p-sm-3 p-md-4 p-lg-5"><a href="/dashboard">Dashboard</a></li>
                {{#if loggedIn}}
                <li class="p-2 p-sm-3 p-md-4 p-lg-5"><a id="logout-link">Logout</a></li>
                {{else}}
                <li class="p-2 p-sm-3 p-md-4 p-lg-5"><a href="/login">Login</a></li>
