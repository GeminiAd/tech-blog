        <div class="card shadow-lg m-4 m-lg-5">
            <div class="card-header">
                <h3 class="card-title m-1">Edit Post</h3>
            </div>
            <div class="card-body">
                <form id="title-input-form" class="p-2">
                    <label for="username-input" class="form-label card-text">Title</label>
                    <input type="text" class="form-control shadow" id="username-input" value="{{{ blogPost.title }}}">
                </form>
                <form id="content-input-form" class="p-2">
                    <label for="contentTextarea" class="form-label card-text">Content</label>
                    <textarea class="form-control shadow" id="contentTextarea" rows="3">{{{ blogPost.content }}}</textarea>
                </form>
                <div class="container-fluid p-3">
                    <div class="row d-flex justify-content-center">
                        <button class="btn btn-custom shadow col-12 col-md-6"
                            id="edit-post-button">Edit Post</button>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row d-flex justify-content-center">
                        <button class="btn btn-custom shadow col-12 col-md-6"
                            id="delete-post-button">Delete Post</button>
                    </div>
                </div>
            </div>
        </div>