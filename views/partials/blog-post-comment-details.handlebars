<div class="container-fluid p-0">
    <div class="row d-flex justify-content-end mx-4 mx-lg-5">
        <div class="card shadow p-0 col-8">
            {{#if (is_author userName)}}
            <a href="/comments/{{{id}}}">
            <div class="card-body d-flex justify-content-between">
            {{else}}
            <div class="card-body d-flex justify-content-between background-grey">
            {{/if}}
                <p class="card-text m-0">{{{content}}}</p>
                <p class="card-text">Posted by {{{user.user_name}}} on {{{format_date created_at}}}</p>
            </div>
            {{#if (is_author userName)}}
            </a>
            {{/if}}
        </div>
    </div>
</div>